<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sportsapp.volleyliga">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.sportsapp.volleyliga.utilities.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_MODELS"
            android:value="com.sportsapp.volleyliga.models.CachedMatch" />

        <activity
            android:name="com.sportsapp.volleyliga.activities.MatchListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sportsapp.volleyliga.activities.MatchActivity"
            android:launchMode="singleTop"
            android:theme="@style/MatchActivityTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.sportsapp.volleyliga.activities.TeamDetailActivity"
            android:label=""
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>
