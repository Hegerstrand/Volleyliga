                    <!--android:layout_height="24dp"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:textAppearance="?android:attr/textAppearance"-->
                    <!--tools:text="Hans-Ole Nielsen" />-->
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>